<mvc:View controllerName="ui5-pwa.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:core="sap.ui.core">
   <App height="100%">
      <Page title="{i18n>appTitle}">
         <VBox height="100%" justifyContent="SpaceBetween">
            <List items="{todos>/}">
               <items>
                  <CustomListItem >
                     <HBox alignItems="Center">
                        <CheckBox selected="{todos>checked}" select="setDone"/>
                        <Text class="todo" text="{todos>text}">
                           <customData>
                              <core:CustomData key="done" value="{= ${todos>checked} ? 'done' : 'notDone'}" writeToDom="true"/>
                           </customData>
                        </Text>
                     </HBox>
                  </CustomListItem>
               </items>
            </List>
            <HBox width="100%">
               <Input submit="addNewTodo" value="{newTodo>/text}">
                  <layoutData>
                     <FlexItemData growFactor="1" />
                  </layoutData>
               </Input>
               <Button icon="sap-icon://add" type="Transparent" press="addNewTodo"/>
            </HBox>
         </VBox>
      </Page>
   </App>
</mvc:View>